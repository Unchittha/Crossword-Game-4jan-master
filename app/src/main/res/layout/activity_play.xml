<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rtc.patcharee.unchittha.crosswordgame.PlayActivity"
    android:background="@drawable/pg">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="#3e56ed"
        tools:ignore="HardcodedText" />

    <RelativeLayout


        android:background="@drawable/game1"
        android:layout_width="wrap_content"
        android:id="@+id/relPlay"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp">

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="1"
            android:id="@+id/editText"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="23dp"
            tools:ignore="RtlHardcoded"
            android:layout_width="30dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="1"
            android:id="@+id/editText2"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="94dp"
            android:elevation="2dp"
            tools:ignore="RtlHardcoded,UnusedAttribute"
            android:layout_width="30dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="1"
            android:id="@+id/editText3"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="94dp"
            tools:ignore="RtlHardcoded"
            android:layout_width="30dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="1"
            android:id="@+id/editText4"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="94dp"
            android:layout_marginLeft="162dp"
            tools:ignore="RtlHardcoded"
            android:layout_width="30dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="1"
            android:id="@+id/editText5"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="94dp"
            android:layout_marginLeft="215dp"
            tools:ignore="RtlHardcoded"
            android:layout_width="30dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="1"
            android:id="@+id/editText6"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="113dp"
            tools:ignore="RtlHardcoded"
            android:layout_width="30dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLength="1"
            android:id="@+id/editText7"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="234dp"
            android:layout_marginLeft="113dp"
            tools:ignore="RtlHardcoded"
            android:layout_width="30dp" />


    </RelativeLayout>

    <Button
        android:text="Answer"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        tools:ignore="HardcodedText"
        android:background="#b0e4e6"
        android:layout_width="300dp"
        android:textSize="20sp"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp" />

    <RelativeLayout
        android:id="@+id/radWord"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="150dp"
        android:layout_height="120dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/linWord">

            <Button
                android:text="Word 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button"
                android:layout_weight="1"
                tools:ignore="ButtonStyle,HardcodedText"
                android:background="#cbea6e"
                android:fontFamily="casual" />

            <Button
                android:text="Word 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_weight="1"
                tools:ignore="ButtonStyle,HardcodedText"
                android:background="#cbea6e"
                android:fontFamily="casual" />

        </LinearLayout>

        <ScrollView
            android:layout_above="@+id/linWord"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="20sp"
                    android:textColor="?attr/editTextColor"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
